@model WebApplication1.Models.Student

@{
    ViewData["Title"] = "ثبت دانشجوی جدید";
}


<form asp-controller="Student"  asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Family" class="control-label"></label>
        <input asp-for="Family" class="form-control" />
        <span asp-validation-for="Family" class="text-danger"></span>
    </div>
        <div class="form-group"></div>
        <label asp-for="Lesson" class="control-label"></label>
        <input asp-for="Lesson" class="form-control" />
        <span asp-validation-for="Lesson" class="text-danger"></span>
    </div>
        <div class="form-group"></div>
        <label asp-for="Grade" class="control-label"></label>
        <input asp-for="Grade" class="form-control" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">ثبت</button>
</form>

<a href="@Url.Action("Index", "Student")" class="btn btn-secondary mt-3">بازکشت</a>
